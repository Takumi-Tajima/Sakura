= link_to '食材を登録する', new_admins_food_path, class: 'btn btn-primary'

%table.table.mt-5
  %thead
    %tr
      %th 名前
      %th 値段
      %th 公開ステータス
      %th
  %tbody
    - @foods.each do |food|
      %tr
        %td= link_to food.name, admins_food_path(food)
        %td= number_to_currency(food.price)
        %td= food.is_published? ? '公開中' : '非公開'
        %td
          = link_to '編集', edit_admins_food_path(food), class: 'me-2'
          = link_to '削除', admins_food_path(food), data: { turbo_method: :delete, turbo_confirm: '削除してよろしいですか？' }
